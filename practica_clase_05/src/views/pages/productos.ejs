<!DOCTYPE html>
<html lang="es-AR">
    <head><%- include('../partials/head'); %></head>

    <body>
        <header><%- include('../partials/header'); %></header>

        <main>
            <h2>Zapatillas</h2>
            <br>

            <table class="table">
                <thead>
                    <tr">
                        <th>ID</th>
                        <th>Marca</th>
                        <th>Talle</th>
                        <th>Modelo</th>
                        </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < zapatillas.length> 0; i++) { %>
                        <tr>
                            <td><%=zapatillas[i].id%></td>
                            <td><%=zapatillas[i].marca%></td>
                            <td><%=zapatillas[i].talle%></td>
                            <td><%=zapatillas[i].modelo%></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </main>

        <a href="/"><button>HOME</button></a>

        <footer><%- include('../partials/footer'); %></footer>
    </body>
</html>